<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="20dp"
    app:cardElevation="@dimen/cardview_compat_inset_shadow"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/photo_item_evento"
        android:layout_width="wrap_content"
        android:adjustViewBounds="true"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:src="@drawable/logo"
        />

    <TextView
        android:id="@+id/name_item_evento"
        android:layout_width="55dp"
        android:layout_height="23dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:text="Nombre:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_item_evento"
        />

    <TextView
        android:id="@+id/fecha_item_evento"
        android:layout_width="210dp"
        android:layout_height="16dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:text="Fecha:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_item_evento" />

    <TextView
        android:id="@+id/aforo_item_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:layout_marginTop="6dp"
        android:text="Aforo Maximo:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fecha_item_evento"
         />

    <TextView
        android:id="@+id/precio_item_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:text="Precio:"

        app:layout_constraintStart_toEndOf="@+id/fecha_item_evento"

        app:layout_constraintTop_toBottomOf="@id/photo_item_evento" />

    <TextView
        android:id="@+id/aforo_actual_item_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:text="Aforo Actual:"

        app:layout_constraintStart_toEndOf="@+id/fecha_item_evento"

        app:layout_constraintTop_toBottomOf="@id/precio_item_evento" />

    <ImageView
        android:id="@+id/estado_evento"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_access_time_filled_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>